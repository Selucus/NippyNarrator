
{
    "manifest_version": 3,
    "name": "Highlight 'The' Extension",
    "version": "1.0",
    "permissions": [
      "storage",
      "activeTab",
      "declarativeContent",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js", "validate.js"]
      }
    ]
}
  